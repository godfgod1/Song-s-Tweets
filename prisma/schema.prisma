// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = "file:./dev.db"
  // url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Write     Write[]
  reply     reply[]
}

model Write {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  content   String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  reply     reply[]
}

model reply {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  write     Write    @relation(fields: [writeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  writeId   Int
}
